{
    "compilerOptions": {
      "target": "ES2021",                         // Set the JavaScript version to compile to
      "module": "commonjs",                   // Specify module code generation
      "strict": true,                         // Enable all strict type-checking options
      "esModuleInterop": true,                // Enable default imports from CommonJS modules
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,                   // Skip type checking of declaration files
      "rootDir": "./src",                     // Specify the root directory of input files
      "resolveJsonModule": true,              // Allow importing JSON modules
      "sourceMap": true                       // Generates corresponding '.map' files
    },
    "include": ["src"],                       // Files or folders to include in the compilation
    "exclude": ["node_modules"]       // Files or folders to exclude
  }
  